<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="eu.kalafatic.evolution.view.application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="eu.kalafatic.evolution.view.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="eu.kalafatic.evolution.view.EvoPerspective"
            fixed="true"
            id="eu.kalafatic.evolution.view.evoPerspective"
            name="Evo">
      </perspective>
   </extension>
   <extension
         id="eu.kalafatic.evolution.view.product"
         point="org.eclipse.core.runtime.products">
      <product
            name="AI Evolution"
            application="eu.kalafatic.evolution.view.application">
         <property
               name="windowImages"
               value="icons/eclipse16.png,icons/eclipse32.png,icons/eclipse48.png,icons/eclipse64.png, icons/eclipse128.png,icons/eclipse256.png">
         </property>
         <property
               name="appName"
               value="AI Evolution">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
   		 <property
               name="startupProgressRect"
               value="212,348,350,2">
         </property>
         <property
               name="startupMessageRect"
               value="212,335,350,5">
         </property>
         <property
               name="startupForegroundColor"
               value="FF0000">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Orchestration Graph"
            icon="icons/eclipse16.png"
            class="eu.kalafatic.evolution.view.OrchestrationZestView"
            id="eu.kalafatic.evolution.view.orchestrationZestView">
      </view>
      <view
            name="Properties"
            icon="icons/eclipse16.png"
            class="eu.kalafatic.evolution.view.PropertiesView"
            id="eu.kalafatic.evolution.view.propertiesView">
      </view>
      <view
            class="eu.kalafatic.evolution.view.TaskTreeView"
            icon="icons/sample.png"
            id="eu.kalafatic.evolution.view.taskTreeView"
            name="Task Tree">
      </view>
      <view
            class="eu.kalafatic.evolution.view.CommandStackView"
            icon="icons/sample.png"
            id="eu.kalafatic.evolution.view.commandStackView"
            name="Command Stack">
      </view>
      <view
            class="eu.kalafatic.evolution.view.AIOutputView"
            icon="icons/sample.png"
            id="eu.kalafatic.evolution.view.aiOutputView"
            name="AI Output">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="eu.kalafatic.evolution.view.OrchestrationNavigatorContentProvider"
            id="eu.kalafatic.evolution.view.orchestrationContent"
            labelProvider="eu.kalafatic.evolution.view.OrchestrationNavigatorLabelProvider"
            name="Orchestrations">
         <triggerPoints>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="eu.kalafatic.evolution.view.evolutionNature">
               </test>
            </and>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="eu.kalafatic.evolution.model.orchestration.EvoProject">
               </instanceof>
               <instanceof
                     value="eu.kalafatic.evolution.model.orchestration.Orchestrator">
               </instanceof>
               <instanceof
                     value="eu.kalafatic.evolution.model.orchestration.Agent">
               </instanceof>
            </or>
         </possibleChildren>
         <actionProvider
               class="eu.kalafatic.evolution.view.OrchestrationEditorActionProvider">
         </actionProvider>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.linkHelper">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.workingSets">
            </contentExtension>
            <contentExtension
                  pattern="eu.kalafatic.evolution.view.orchestrationContent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="setup"
               label="Setup">
            <command
                  commandId="eu.kalafatic.evolution.view.setupOllama"
                  label="Setup Ollama"
                  style="push">
            </command>
            <command
                  commandId="eu.kalafatic.evolution.view.setupOllamaModel"
                  label="Setup Ollama Model"
                  style="push">
            </command>
            <command
                  commandId="eu.kalafatic.evolution.view.setupLLM"
                  label="Setup LLM"
                  style="push">
            </command>
            <command
                  commandId="eu.kalafatic.evolution.view.setupWorkspace"
                  label="Setup Workspace"
                  style="push">
            </command>
         </menu>
         <menu
               id="file"
               label="File">
            <command
                  commandId="org.eclipse.ui.newWizard"
                  label="New Evo Task"
                  style="push">
               <parameter
                     name="newWizardId"
                     value="eu.kalafatic.evolution.view.newEvoTaskWizard">
               </parameter>
            </command>
            <command
                  commandId="eu.kalafatic.evolution.view.openEvoTasks"
                  label="Open Evo Tasks"
                  style="push">
            </command>
            <command
                  commandId="eu.kalafatic.evolution.view.saveEvoTasks"
                  label="Save Evo Tasks"
                  style="push">
            </command>
            <command
                  commandId="eu.kalafatic.evolution.controller.orchestrationCommand"
                  label="Orchestrate"
                  style="push">
            </command>
            <separator
                  name="org.eclipse.ui.ide.file"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.import"
                  label="Import Evo Tasks"
                  style="push">
               <parameter
                     name="importWizardId"
                     value="eu.kalafatic.evolution.view.importEvoTasksWizard">
               </parameter>
            </command>
            <command
                  commandId="org.eclipse.ui.file.export"
                  label="Export Evo Tasks"
                  style="push">
               <parameter
                     name="exportWizardId"
                     value="eu.kalafatic.evolution.view.exportEvoTasksWizard">
               </parameter>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:eu.kalafatic.evolution.view.taskTreeView">
         <command
               commandId="eu.kalafatic.evolution.view.editTask"
               label="Edit Task"
               style="push">
         </command>
         <command
               commandId="eu.kalafatic.evolution.view.saveEvoTasks"
               label="Save"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:eu.kalafatic.evolution.view.propertiesView">
         <command
               commandId="eu.kalafatic.evolution.controller.orchestrationCommand"
               label="Orchestrate"
               style="push">
         </command>
         <command
               commandId="eu.kalafatic.evolution.controller.mavenBuildCommand"
               label="Maven Build"
               style="push">
         </command>
         <command
               commandId="eu.kalafatic.evolution.controller.gitCommitCommand"
               label="Git Commit"
               style="push">
         </command>
         <separator
               name="saveSeparator"
               visible="true">
         </separator>
         <command
               commandId="eu.kalafatic.evolution.controller.saveCommand"
               label="Save to File"
               style="push">
         </command>
         <command
               commandId="eu.kalafatic.evolution.view.saveEvoTasks"
               label="Save Tasks"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="eu.kalafatic.evolution.view.editors.MultiPageEditor"
            contributorClass="eu.kalafatic.evolution.view.editors.MultiPageEditorContributor"
            extensions="xml"
            icon="icons/sample.png"
            id="eu.kalafatic.evolution.view.editors.MultiPageEditor"
            name="Evo Multi-page Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="eu.kalafatic.evolution.view.category"
            name="AI Evolution">
      </category>
      <wizard
            category="eu.kalafatic.evolution.view.category"
            class="eu.kalafatic.evolution.view.wizards.NewEvoTaskWizard"
            id="eu.kalafatic.evolution.view.newEvoTaskWizard"
            name="New Evo Task">
      </wizard>
      <wizard
            category="eu.kalafatic.evolution.view.category"
            class="eu.kalafatic.evolution.view.wizards.SetupOllamaWizard"
            id="eu.kalafatic.evolution.view.setupOllamaWizard"
            name="Setup Ollama">
      </wizard>
      <wizard
            category="eu.kalafatic.evolution.view.category"
            class="eu.kalafatic.evolution.view.wizards.SetupOllamaModelWizard"
            id="eu.kalafatic.evolution.view.setupOllamaModelWizard"
            name="Setup Ollama Model">
      </wizard>
      <wizard
            category="eu.kalafatic.evolution.view.category"
            class="eu.kalafatic.evolution.view.wizards.SetupLLMWizard"
            id="eu.kalafatic.evolution.view.setupLLMWizard"
            name="Setup LLM">
      </wizard>
      <wizard
            category="eu.kalafatic.evolution.view.category"
            class="eu.kalafatic.evolution.view.wizards.NewEvoProjectWizard"
            id="eu.kalafatic.evolution.view.newEvoProjectWizard"
            name="New Evo Project">
      </wizard>
      <wizard
            category="eu.kalafatic.evolution.view.category"
            class="eu.kalafatic.evolution.view.wizards.AddOrchestrationWizard"
            id="eu.kalafatic.evolution.view.addOrchestrationWizard"
            name="Add Orchestration">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <wizard
            class="eu.kalafatic.evolution.view.wizards.ImportEvoTasksWizard"
            id="eu.kalafatic.evolution.view.importEvoTasksWizard"
            name="Import Evo Tasks">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.exportWizards">
      <wizard
            class="eu.kalafatic.evolution.view.wizards.ExportEvoTasksWizard"
            id="eu.kalafatic.evolution.view.exportEvoTasksWizard"
            name="Export Evo Tasks">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="eu.kalafatic.evolution.view.openEvoTasks"
            name="Open Evo Tasks">
      </command>
      <command
            id="eu.kalafatic.evolution.view.saveEvoTasks"
            name="Save Evo Tasks">
      </command>
      <command
            id="eu.kalafatic.evolution.view.editTask"
            name="Edit Task">
      </command>
      <command
            id="eu.kalafatic.evolution.view.setupOllama"
            name="Setup Ollama">
      </command>
      <command
            id="eu.kalafatic.evolution.view.setupOllamaModel"
            name="Setup Ollama Model">
      </command>
      <command
            id="eu.kalafatic.evolution.view.setupLLM"
            name="Setup LLM">
      </command>
      <command
            id="eu.kalafatic.evolution.view.setupWorkspace"
            name="Setup Workspace">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="eu.kalafatic.evolution.view.handlers.OpenEvoTasksHandler"
            commandId="eu.kalafatic.evolution.view.openEvoTasks">
      </handler>
      <handler
            class="eu.kalafatic.evolution.view.handlers.SaveEvoTasksHandler"
            commandId="eu.kalafatic.evolution.view.saveEvoTasks">
      </handler>
      <handler
            class="eu.kalafatic.evolution.view.handlers.EditTaskHandler"
            commandId="eu.kalafatic.evolution.view.editTask">
      </handler>
      <handler
            class="eu.kalafatic.evolution.view.handlers.SetupOllamaHandler"
            commandId="eu.kalafatic.evolution.view.setupOllama">
      </handler>
      <handler
            class="eu.kalafatic.evolution.view.handlers.SetupOllamaModelHandler"
            commandId="eu.kalafatic.evolution.view.setupOllamaModel">
      </handler>
      <handler
            class="eu.kalafatic.evolution.view.handlers.SetupLLMHandler"
            commandId="eu.kalafatic.evolution.view.setupLLM">
      </handler>
      <handler
            class="eu.kalafatic.evolution.view.handlers.SetupWorkspaceHandler"
            commandId="eu.kalafatic.evolution.view.setupWorkspace">
      </handler>
   </extension>
   <extension
         id="eu.kalafatic.evolution.view.evolutionNature"
         name="Evolution Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="eu.kalafatic.evolution.view.EvolutionNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/sample.png"
            id="eu.kalafatic.evolution.view.evolutionNatureImage"
            natureId="eu.kalafatic.evolution.view.evolutionNature">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandlerProductBinding
            productId="eu.kalafatic.evolution.view.product"
            splashId="eu.kalafatic.evolution.view.splashHandlers.EvoSplashHandler">
      </splashHandlerProductBinding>
      <splashHandler
            class="eu.kalafatic.evolution.view.splashHandlers.EvoSplashHandler"
            id="eu.kalafatic.evolution.view.splashHandlers.EvoSplashHandler">
      </splashHandler>
   </extension>

</plugin>
