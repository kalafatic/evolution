<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="eu.kalafatic.evolution.view.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="eu.kalafatic.evolution.view.Perspective"
            name="RCP Perspective"
            id="eu.kalafatic.evolution.view.perspective">
      </perspective>
      <perspective
            class="eu.kalafatic.evolution.view.EvoPerspective"
            name="Evo"
            id="eu.kalafatic.evolution.view.evoPerspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="AI Evolution"
            application="eu.kalafatic.evolution.view.application">
         <property
               name="windowImages"
               value="icons/eclipse16.png,icons/eclipse32.png,icons/eclipse48.png,icons/eclipse64.png, icons/eclipse128.png,icons/eclipse256.png">
         </property>
         <property
               name="appName"
               value="AI Evolution">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            icon="icons/eclipse16.png"
            class="eu.kalafatic.evolution.view.EcoreZestView"
            id="eu.kalafatic.evolution.view.ecoreZestView">
      </view>
      <view
            class="org.eclipse.ui.navigator.CommonNavigator"
            icon="icons/sample.png"
            id="com.example.test"
            name="My Common Navigator">
      </view>
      <view
            name="Properties"
            icon="icons/eclipse16.png"
            class="eu.kalafatic.evolution.view.PropertiesView"
            id="eu.kalafatic.evolution.view.propertiesView">
      </view>
      <view
            class="eu.kalafatic.evolution.view.TaskTreeView"
            icon="icons/sample.png"
            id="eu.kalafatic.evolution.view.taskTreeView"
            name="Task Tree">
      </view>
      <view
            class="eu.kalafatic.evolution.view.CommandStackView"
            icon="icons/sample.png"
            id="eu.kalafatic.evolution.view.commandStackView"
            name="Command Stack">
      </view>
      <view
            class="eu.kalafatic.evolution.view.AIOutputView"
            icon="icons/sample.png"
            id="eu.kalafatic.evolution.view.aiOutputView"
            name="AI Output">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="com.example.test">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="com.example.test">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.linkHelper">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.workingSets">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               id="com.example.test"
               ratio="0.5"
               relationship="stack"
               relative="org.eclipse.ui.navigator.ProjectExplorer">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="file"
               label="File">
            <command
                  commandId="org.eclipse.ui.newWizard"
                  label="New Evo Task"
                  style="push">
               <parameter
                     name="newWizardId"
                     value="eu.kalafatic.evolution.view.newEvoTaskWizard">
               </parameter>
            </command>
            <command
                  commandId="eu.kalafatic.evolution.view.openEvoTasks"
                  label="Open Evo Tasks"
                  style="push">
            </command>
            <command
                  commandId="eu.kalafatic.evolution.view.saveEvoTasks"
                  label="Save Evo Tasks"
                  style="push">
            </command>
            <separator
                  name="org.eclipse.ui.ide.file"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.import"
                  label="Import Evo Tasks"
                  style="push">
               <parameter
                     name="importWizardId"
                     value="eu.kalafatic.evolution.view.importEvoTasksWizard">
               </parameter>
            </command>
            <command
                  commandId="org.eclipse.ui.file.export"
                  label="Export Evo Tasks"
                  style="push">
               <parameter
                     name="exportWizardId"
                     value="eu.kalafatic.evolution.view.exportEvoTasksWizard">
               </parameter>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:eu.kalafatic.evolution.view.taskTreeView">
         <command
               commandId="eu.kalafatic.evolution.view.editTask"
               label="Edit Task"
               style="push">
         </command>
         <command
               commandId="eu.kalafatic.evolution.view.saveEvoTasks"
               label="Save"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="eu.kalafatic.evolution.view.editors.MultiPageEditor"
            contributorClass="eu.kalafatic.evolution.view.editors.MultiPageEditorContributor"
            extensions="mpe"
            icon="icons/sample.png"
            id="eu.kalafatic.evolution.view.editors.MultiPageEditor"
            name="Sample Multi-page Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="eu.kalafatic.evolution.view.wizards.NewEvoTaskWizard"
            id="eu.kalafatic.evolution.view.newEvoTaskWizard"
            name="New Evo Task">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <wizard
            class="eu.kalafatic.evolution.view.wizards.ImportEvoTasksWizard"
            id="eu.kalafatic.evolution.view.importEvoTasksWizard"
            name="Import Evo Tasks">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.exportWizards">
      <wizard
            class="eu.kalafatic.evolution.view.wizards.ExportEvoTasksWizard"
            id="eu.kalafatic.evolution.view.exportEvoTasksWizard"
            name="Export Evo Tasks">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="eu.kalafatic.evolution.view.openEvoTasks"
            name="Open Evo Tasks">
      </command>
      <command
            id="eu.kalafatic.evolution.view.saveEvoTasks"
            name="Save Evo Tasks">
      </command>
      <command
            id="eu.kalafatic.evolution.view.editTask"
            name="Edit Task">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="eu.kalafatic.evolution.view.handlers.OpenEvoTasksHandler"
            commandId="eu.kalafatic.evolution.view.openEvoTasks">
      </handler>
      <handler
            class="eu.kalafatic.evolution.view.handlers.SaveEvoTasksHandler"
            commandId="eu.kalafatic.evolution.view.saveEvoTasks">
      </handler>
      <handler
            class="eu.kalafatic.evolution.view.handlers.EditTaskHandler"
            commandId="eu.kalafatic.evolution.view.editTask">
      </handler>
   </extension>

</plugin>
